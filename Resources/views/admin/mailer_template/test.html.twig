{% trans_default_domain 'sfs_mailer_bundle' %}
{% extends '@SfsMailer/admin_layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.toName) }}
        </div>
        <div class="col">
            {{ form_row(form.fromName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.toEmail) }}
        </div>
        <div class="col">
            {{ form_row(form.fromEmail) }}
        </div>
    </div>

    <div class="row">
        <div class="col-6 offset-3">
            {{ form_widget(form) }}
            <input type="submit" value="send"/>
        </div>
    </div>


    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock content %}