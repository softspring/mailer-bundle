{% trans_default_domain 'sfs_mailer_bundle' %}
{% extends '@SfsMailer/admin_layout.html.twig' %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">History</h1>
        <a href="{{ url('sfs_mailer_send_spool') }}" class="btn btn-primary mb-3">Send spool now</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">{{ 'history.fields.date.header'|trans }}</th>
            <th scope="col">{{ 'history.fields.templateId.header'|trans }}</th>
            <th scope="col">{{ 'history.fields.to.header'|trans }}</th>
            <th scope="col">{{ 'history.fields.subject.header'|trans }}</th>
            <th scope="col">{{ 'history.fields.from.header'|trans }}</th>
            <th scope="col">{{ 'history.fields.status.header'|trans }}</th>
            <th scope="col"></th>
        </tr>
        </thead>

        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.messageDate|date('H:i d-m-Y') }}</td>
                <td>{{ mail.templateId|trans }}</td>
                <td>{{ mail.messageTo|keys|join(',') }}</td>
                <td>{{ mail.messageSubject }}</td>
                <td>{{ mail.messageFrom|keys|join(',') }}</td>
                <td>{{ ('message.status.values.'~mail.status)|trans }}</td>
                <td align="right"><a href="{{ url('sfs_mailer_history_details', {'messageId': mail.id}) }}" class="text-nowrap">details <span class="mdi mdi-18px mdi-eye-outline align-middle"></span><</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}