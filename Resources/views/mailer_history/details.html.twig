{% trans_default_domain 'sfs_mailer_bundle' %}
{% extends '@SfsMailer/layout.html.twig' %}

{% block mailer_content %}
    <p>{{ mail.templateId }}</p>
    <p>{{ mail.messageSubject }}</p>
    <p>{{ mail.messageTo|keys|join(',') }}</p>
    <p>{{ mail.messageFrom|keys|join(',') }}</p>
    <p>{{ mail.messageDate|date('H:i d-m-Y') }}</p>
    <p>{{ ('message.status.values.'~mail.status)|trans }}</p>

    {#<p>{{ mail.messageBodyText }}</p>#}
    <div class="border p-3 bg-light">{{ mail.messageBodyHtml|raw }}</div>
{% endblock mailer_content %}