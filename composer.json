{
    "name": "softspring/mailer-bundle",
    "description": "This bundle provides some features that ease mailing for Symfony projects.",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "softspring/core-bundle": "^4.0",
        "symfony/mailer": "^4.4 || ^5.3 || ^6.0"
    },
    "require-dev": {
        "symfony/console": "^4.4 || ^5.3 || ^6.0",
        "symfony/framework-bundle": "^4.4 || ^5.3 || ^6.0",
        "symfony/translation": "^4.4 || ^5.3 || ^6.0",
        "symfony/yaml": "^4.4 || ^5.3 || ^6.0",
        "twig/twig": "*"
    },
    "suggest": {
        "softspring/admin-bundle": "Use softspring admin templates",
        "twig/cssinliner-extra": "Use css inliner",
        "twig/inky-extra": "Use Inky mailing templates"
    },
    "autoload": {
        "psr-4": {
            "Softspring\\MailerBundle\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0-dev"
        }
    }
}
